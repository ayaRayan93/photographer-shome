<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageface"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:civ_shadow_radius = "10"
            android:src="@drawable/facebook1"/>
        <TextView
            android:id="@+id/id_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="jjhhhhh"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageinsta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:civ_shadow_radius = "10"
            android:src="@drawable/a6"/>
        <TextView
            android:id="@+id/id_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="jjhhhhh"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imagebehance"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:civ_shadow_radius = "10"
            android:src="@drawable/a1"/>
        <TextView
            android:id="@+id/id_behance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="jjhhhhh"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imagewhats"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:civ_shadow_radius = "10"
            android:src="@drawable/whatsapp1"/>
        <TextView
            android:id="@+id/id_whats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="jjhhhhh"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>
</LinearLayout>